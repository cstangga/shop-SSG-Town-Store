<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sh.admin.sales.model.dao.SalesDAO">

    <resultMap id="salesResultMap" type="com.sh.admin.sales.model.dto.SalesDTO">
        <result property="itemName" column="itemName"/>
        <result property="totalSales" column="total_sales"/>
    </resultMap>

    <select id="getTopSalesItems" resultMap="salesResultMap">
        SELECT item_name AS itemName, SUM(sales_price) AS total_sales
        FROM tbl_sales
        GROUP BY item_name
        ORDER BY total_sales DESC
        LIMIT 7
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.admin.member.model.dao.MemberMapper">
    <resultMap id="memberDtoMap" type="memberDto">
        <id column="member_id" property="memberId"/>
        <result column="member_name" property="memberName"/>
        <result column="member_gender" property="memberGender"/>
        <result column="member_birth" property="memberBirth"/>
        <result column="member_address" property="memberAddress"/>
        <result column="member_email" property="memberEmail"/>
        <result column="created_at" property="createdAt"/>
        <result column="member_bank" property="memberBank"/>
        <result column="member_account" property="memberAccount"/>
        <result column="member_status" property="memberStatus"/>
    </resultMap>
    <parameterMap id="memberDtoMap" type="java.util.Map">
        <parameter property="memberId" javaType="java.lang.String"/>
        <parameter property="memberStatus" javaType="java.lang.String"/>
        <!-- 다른 파라미터들도 정의할 수 있음 -->
    </parameterMap>
    <!-- 사용자 조회 쿼리 -->
    <select id="findAllMember" resultMap="memberDtoMap">
        select
            *
        from
            tbl_member
        order by
            member_id;
    </select>

    <!-- 멤버 삭제 쿼리 -->
    <delete id="deleteById" parameterType="java.lang.String">
        delete from tbl_member
        where member_id = #{memberId}
        and member_status = 'Y';
    </delete>
</mapper>